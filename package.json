{
  "name": "ignition-mcp",
  "displayName": "Ignition MCP - Tasks & Launch",
  "description": "Expose Tasks & Launch configurations to MCP! Let AI assistants run builds, tests, and debug sessions",
  "version": "0.0.0-dev",
  "preview": true,
  "publisher": "jostrand",
  "license": "MIT",
  "icon": "docs/ignition-mcp-logo.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlost/ignition-mcp"
  },
  "homepage": "https://github.com/jlost/ignition-mcp#readme",
  "bugs": {
    "url": "https://github.com/jlost/ignition-mcp/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "cursor",
    "vscode",
    "copilot",
    "claude",
    "tasks",
    "debug",
    "automation",
    "launch",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ignition-mcp.configure",
        "title": "Ignition MCP: Configure MCP Client"
      },
      {
        "command": "ignition-mcp.show-status",
        "title": "Ignition MCP: Show Status"
      },
      {
        "command": "ignition-mcp.takeover",
        "title": "Ignition MCP: Take Over Server"
      },
      {
        "command": "ignition-mcp.restart",
        "title": "Ignition MCP: Restart Server"
      }
    ],
    "configuration": {
      "title": "Ignition MCP",
      "properties": {
        "ignition-mcp.outputLimit": {
          "type": [
            "integer",
            "null"
          ],
          "default": 20480,
          "minimum": 1024,
          "description": "Default maximum characters to capture from task and debug output. Can be overridden per-task/launch via mcp.outputLimit in tasks.json/launch.json. Set to null for unlimited. Default is 20480 (20KB)."
        },
        "ignition-mcp.awaitTimeout": {
          "type": "integer",
          "default": 300000,
          "minimum": 1000,
          "description": "Default timeout in milliseconds for await_task and await_debug_event tools. Can be overridden per-call via timeoutMs parameter. Default is 300000 (5 minutes)."
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": ".vscode/tasks.json",
        "url": "./schemas/tasks-mcp.schema.json"
      },
      {
        "fileMatch": ".vscode/launch.json",
        "url": "./schemas/launch-mcp.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "jsonc-parser": "^3.3.1",
    "zod": "^3.22.0"
  }
}
